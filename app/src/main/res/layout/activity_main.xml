<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_small"
    tools:context=".MainActivity">

    <View
        android:id="@+id/rectStr"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rect" />


    <View
        android:id="@+id/rect"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="155dp"
        android:background="@drawable/rect" />


    <View
        android:id="@+id/circle"
        android:layout_width="350dp"
        android:layout_height="350dp"

        android:layout_gravity="center_vertical|center"
        android:layout_marginRight="120dp"
        android:background="@drawable/circle" />


    <TextView
        android:id="@+id/tvNoSign"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginRight="120dp"
        android:gravity="center_vertical"
        android:text="NO SIGN DETECTED"
        android:textAlignment="center"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/tvCurrentStr"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="95dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvCurrentSpeed"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="155dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="40dp" />


    <ImageView
        android:id="@+id/ivSignBackground"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginRight="120dp"
        android:src="@drawable/sign_background"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvMaxSpeed"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginRight="120dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="200dp" />


</FrameLayout>
