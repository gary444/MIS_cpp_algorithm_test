<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"

    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/dummy_camera_view"
        opencv:show_fps="false"
        android:background="@drawable/background_small"
        opencv:camera_id="any"/>


    <View
        android:id="@+id/rect"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="155dp"
        android:background="@drawable/rect" />

    <View
        android:id="@+id/circle"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginRight="120dp"
        android:layout_gravity="center_vertical|center"
        android:background="@drawable/circle" />



    <TextView
        android:id="@+id/tvNoSign"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="NO SIGN DETECTED"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical|center"
        android:layout_marginRight="120dp"
        android:textSize="50dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/tvCurrentSpeed"
        android:textSize="40dp"
        android:textColor="#fff"
        android:gravity="center_vertical"
        android:layout_marginLeft="155dp"
        android:layout_gravity="center_vertical|center"
        android:textAlignment="center" />


    <ImageView
        android:id="@+id/ivSignBackground"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginRight="120dp"
        android:src="@drawable/sign_background"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvMaxSpeed"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center"
        android:layout_marginRight="120dp"
        android:textSize="200dp" />




    <Button
        android:id="@+id/signFinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="right|top"
        android:text="PhotoTest" />

    <Button
        android:text="CamTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:id="@+id/signFinderCamTest"/>

</FrameLayout>
